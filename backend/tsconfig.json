{
  "compilerOptions": {
    "target": "es2019",                                 
    "module": "commonjs",                                
    "moduleResolution": "node",
    "baseUrl": "./src/",                               
    "outDir": "./dist",                
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                     
    "skipLibCheck": true,      
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
